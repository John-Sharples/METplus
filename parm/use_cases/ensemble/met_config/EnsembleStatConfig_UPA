   sid_exc            = [];
   ens_ssvar_bin_size = 1.0;
   ens_phist_bin_size = 0.05;

   field = [
      { name = "TMP";  level = upa_grib_levels; cat_thresh = tmp_upa_thresh;  },
      { name = "DPT";  level = upa_grib_levels; cat_thresh = dpt_upa_thresh;  },
      { name = "HGT";  level = upa_grib_levels; cat_thresh = hgt_upa_thresh;  },
      { name = "UGRD"; level = upa_grib_levels; cat_thresh = uv_upa_thresh;   },
      { name = "VGRD"; level = upa_grib_levels; cat_thresh = uv_upa_thresh;   },
      { name = "WIND"; level = upa_grib_levels; cat_thresh = wind_upa_thresh; }
   ];
};

obs = fcst;
obs = { wind_thresh = >2.572; };

