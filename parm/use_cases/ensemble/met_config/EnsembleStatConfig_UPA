}

///////////////////////////////////////////////////////////////////////////////

upa_grib_levels = [ "P500" ];

tmp_upa_thresh  = [ >263, >268, >273, >278, >283 ];
dpt_upa_thresh  = [ >258, >263, >268, >273, >278 ];
hgt_upa_thresh  = [ >1000, >2000, >3000, >4000, >5000, >6000 ];
uv_upa_thresh   = [ >-20, >-10, >-5, >5, >10, >20 ];
wind_upa_thresh = [ >4, >8, >12, >16, >20 ];

//
// Ensemble product fields to be processed
//
ens = {
   ens_thresh = ${ENS_THRESH};
   vld_thresh = 1.0;

   field = [
      { name = "TMP";  level = upa_grib_levels; cat_thresh = tmp_upa_thresh;  },
      { name = "DPT";  level = upa_grib_levels; cat_thresh = dpt_upa_thresh;  },
      { name = "HGT";  level = upa_grib_levels; cat_thresh = hgt_upa_thresh;  },
      { name = "UGRD"; level = upa_grib_levels; cat_thresh = uv_upa_thresh;   },
      { name = "VGRD"; level = upa_grib_levels; cat_thresh = uv_upa_thresh;   },
      { name = "WIND"; level = upa_grib_levels; cat_thresh = wind_upa_thresh; }
   ];
}

////////////////////////////////////////////////////////////////////////////////

cnt_thresh  = [ NA ];
cnt_logic   = UNION;
wind_thresh = [ NA ];
wind_logic  = UNION;

//
// Forecast and observation fields to be verified
//
fcst = {
